<script>
    $( document ).ready(function() {
        $("#errorBox").hide();
        $("#queryRunning").hide();
    });


    $('#sparqlForm').on('submit', function(e) {
        e.preventDefault();
        e.stopPropagation(); // only neccessary if something above is listening to the (default-)event too

        $("#errorBox").hide();
        $("#queryRunning").show();

        //var query = "SELECT * WHERE { ?sub ?pred ?obj .} LIMIT 10";
        var query = yasqe.getValue();
        var data = {
            'query': query
        };
        var key = $("#queryKey").val();
        var resultsFormat = $( "#resultsFormat" ).val();
        var ajaxCall = $.ajax
        ({
            type: "GET",
            url: "<?= $api_home ?>" +  "/query/" + "<?= $dataset->uuid ?>" + "/sparql",
            dataType: 'text',
            headers: {
                Accept: resultsFormat
            },
            beforeSend: function (xhr) {
                xhr.setRequestHeader ("Authorization", "Basic " + btoa(key + ":" + key));
            },
            data: data,
            success: function (){
                //alert('Thanks for your comment!');
            }
        });

        ajaxCall.done(function(text) {
            $("#queryRunning").hide();
            $("#errorBox").hide();
            yasr.setResponse({
                response: text,
                contentType: resultsFormat
            });

            // Draw results with current plugin
            yasr.draw()
        });
        ajaxCall.fail(function(response) {
            $("#queryRunning").hide();
            var error;
            switch(response.status) {
                case 400:
                    error = "Error: Invalid SPARQL query";
                    break;
                case 401:
                    error = "Authentication error: There is a problem with your key";
                    break;
                default:
                    error = "An undefined error occurred while executing your SPARQL query";
            }
            $("#errorBox").html(error);
            $("#errorBox").show();
        });
        ajaxCall.always(function() {
            //alert( "second complete" );
        });
    });

</script>


